<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BottomNavigationStyle" parent="Widget.Design.BottomNavigationView">
        <item name="android:background">@color/terracotta</item>
        <item name="itemIconTint">@color/bottom_nav_icon_color</item>
        <item name="itemTextColor">@color/bottom_nav_icon_color</item>
        <item name="itemRippleColor">@color/olive_green</item>
        <item name="android:textSize">25sp</item>
        <item name="fontFamily">@font/lato_regular</item>
    </style>
    <style name="CustomRatingBar" parent="Widget.AppCompat.RatingBar.Small">
        <item name="colorControlNormal">@color/gray</item> <!-- Unfilled star color -->
        <item name="colorControlActivated">@color/gold</item> <!-- Filled star color -->
    </style>
</resources>